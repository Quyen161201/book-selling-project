<!doctype html>
<html lang="en">

<head>
   <%- include ("head.ejs") %>

      <style>
         a {
            text-decoration: none;
         }

         .iq-card-body {
            margin-top: 20px;
         }
      </style>

</head>

<body>
   <!-- loader Start -->
   <div id="loading">
      <div id="loading-center">
      </div>
   </div>
   <!-- loader END -->
   <!-- Wrapper Start -->
   <div class="wrapper">
      <!-- Sidebar  -->
      <%- include ("sidebar.ejs") %>
         <!-- TOP Nav Bar -->
         <%- include ("sidebar-top-index.ejs") %>

            <!-- TOP Nav Bar END -->
            <!-- Page Content  -->
            <div id="content-page" class="content-page">
               <div class="container-fluid">
                  <div class="row">
                     <div class="col-sm-12">
                        <div class="iq-card">
                           <div class="iq-card-header d-flex justify-content-between">
                              <div class="iq-header-title">
                                 <h4 class="card-title">Danh sách tác giả</h4>
                              </div>
                              <div class="iq-card-header-toolbar d-flex align-items-center">
                                 <a href="/adminAuthor-create" class="btn btn-primary" style="color: #f1f2f4;">Thêm
                                    tác giả</a>
                              </div>
                           </div>
                           <div class="iq-card-body">
                              <div class="table-responsive">
                                 <table class=" table table-hover" style="width:100%">
                                    <thead>
                                       <tr>
                                          <th style="width: 5%;">STT</th>

                                          <th style="width: 20%;">Tên tác giả</th>
                                          <th style="width: 60%;">Mô tả tác giả</th>
                                          <th style="width: 4%;">Hoạt động</th>
                                       </tr>
                                    </thead>
                                    <tbody>
                                       <%listAuthor.forEach((author,index)=> {%>
                                          <tr>
                                             <td>
                                                <%= index+1 %>
                                             </td>

                                             <td>
                                                <%= author.authorName %>
                                             </td>
                                             <td>
                                                <p class="mb-0">
                                                   <%= author.description %>
                                                </p>
                                             </td>
                                             <td>
                                                <div class="flex align-items-center list-user-action">
                                                   <a style="margin-top: 10px;" class=" bg-primary"
                                                      data-toggle="tooltip" data-placement="top" title=""
                                                      data-original-title="Edit"
                                                      href="/adminAuthor-update/<%= author.authorId %>">
                                                      <i class="fa-solid fa-pen" style="color: #f4f5f5;"></i>
                                                   </a>
                                                   <button type="button" class="btn btn-danger" data-bs-toggle="modal"
                                                      data-bs-target="#exampleModal"
                                                      style="width: 24px; margin-left: 3px;margin-bottom: 5px; height: 25px; position: relative;">
                                                      <i class="fa-solid fa-trash"
                                                         style="color: #f1f2f4;position: absolute; top: 4px; right: 2px;"></i>
                                                   </button>
                                                </div>

                                                <!-- Modal -->
                                                <div class="modal fade" id="exampleModal" tabindex="-1"
                                                   aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                   <div class="modal-dialog">
                                                      <div class="modal-content">
                                                         <div class="modal-header">
                                                            <h5 class="modal-title" id="exampleModalLabel">Confirm
                                                               delete</h5>
                                                            <button type="button" class="btn-close"
                                                               data-bs-dismiss="modal" aria-label="Close"></button>
                                                         </div>
                                                         <div class="modal-body">
                                                            Bạn muốn xóa tác giả <%= author.authorName %>
                                                         </div>
                                                         <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary"
                                                               data-bs-dismiss="modal">Close</button>
                                                            <form action="/admin-deleteAuthor/<%= author.authorId%>"
                                                               method="post">
                                                               <button class="btn btn-danger">Delete</button>
                                                            </form>
                                                         </div>
                                                      </div>
                                                   </div>
                                                </div>
                                             </td>
                                          </tr>


                                          <% });%>
                                             <% %>
                                    </tbody>
                                 </table>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
   </div>
   <!-- Wrapper END -->
   <!-- Footer -->
   <footer class="iq-footer">
      <%- include ("footer.ejs") %>
   </footer>
   <!-- Footer END -->
   <%- include ("boostrapJs.ejs") %>
</body>
<script>

</script>

</html>