<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ("head.ejs") %>
        <title>Đơn hàng của tôi</title>
        <style>
            #order-container {
                width: 60%;
                margin-top: 120px;
                margin-left: 360px;

                position: relative;
                text-align: center;
                z-index: 2000;
            }

            #order-table {
                width: 100%;
                margin-top: 20px;
                border-collapse: collapse;
            }

            #order-table th,
            #order-table td {
                border: 1px solid #ddd;
                padding: 8px;
            }

            #order-table th {
                background-color: #f2f2f2;
            }
        </style>
</head>

<body>

    <!-- Sidebar  -->
    <%- include ("sidebarIndex.ejs") %>
        <!-- TOP Nav Bar -->
        <%- include ("sidebar-top-index.ejs") %>
            <div id="content-page" class="content-page">
                <div class="container-fluid checkout-content">
                    <div class="row">
                        <div id="cart" class="card-block show p-0 col-12">
                            <div class="row align-item-center">
                                <div class="col-lg-12">
                                    <div class="iq-card">
                                        <div
                                            class="iq-card-header d-flex justify-content-between iq-border-bottom mb-0">
                                            <div class="iq-header-title">
                                                <h4 class="card-title">Đơn hàng của tôi</h4>
                                            </div>
                                        </div>
                                        <div style=" margin-bottom: 100px;">

                                            <% if(puchase_product.length>0){ %>

                                                <% for (let i=0; i < puchase_product.length; i++) { %>
                                                    <% if (puchase_product[i][0].status==0) { %>
                                                        <div class="badge badge-pill badge-secondary"
                                                            style="margin-left: 20px;">Đang xử lý</div>
                                                        <% } else if (puchase_product[i][0].status==1) { %>
                                                            <div class="badge badge-pill badge-info"
                                                                style="margin-left: 20px;">Đang vận chuyển</div>
                                                            <% } else if (puchase_product[i][0].status==2) { %>
                                                                <div class="badge badge-pill badge-success"
                                                                    style="margin-left: 20px;">Giao hàng thành công
                                                                </div>
                                                                <% } else { %>
                                                                    <div class="badge badge-pill badge-danger"
                                                                        style="margin-left: 20px;">Giao hàng thất bại
                                                                    </div>
                                                                    <% } %>
                                                                        <% for (let j=0; j < puchase_product[i].length;
                                                                            j++) { %>
                                                                            <div class="iq-card-body">

                                                                                <ul class=" list-inline p-0 m-0">

                                                                                    <li class="checkout-product">
                                                                                        <div
                                                                                            class="row align-items-center">

                                                                                            <div class="col-sm-3">

                                                                                                <span
                                                                                                    class="checkout-product-img">
                                                                                                    <a
                                                                                                        href="javascript:void();"><img
                                                                                                            class="img-fluid rounded"
                                                                                                            src="/images/browse-books/<%= puchase_product[i][j].thumbnail %>"
                                                                                                            alt=""></a>
                                                                                                </span>
                                                                                            </div>
                                                                                            <div class="col-sm-3">
                                                                                                <div
                                                                                                    class="checkout-product-details">
                                                                                                    <h5>
                                                                                                        <%= puchase_product[i][j].productName
                                                                                                            %>
                                                                                                    </h5>
                                                                                                    <div class="price">
                                                                                                        <h5>
                                                                                                            <%= puchase_product[i][j].unitPrice.toLocaleString()
                                                                                                                %> ₫
                                                                                                        </h5>
                                                                                                    </div>
                                                                                                </div>
                                                                                            </div>

                                                                                            <div class="col-sm-6">
                                                                                                <div class="row">
                                                                                                    <div
                                                                                                        class="col-sm-6">
                                                                                                        <div
                                                                                                            class="row align-items-center mt-2">
                                                                                                            <div
                                                                                                                class="col-sm-7 col-md-6">
                                                                                                                <span>x
                                                                                                                    <%= puchase_product[i][j].
                                                                                                                        quatity
                                                                                                                        %>
                                                                                                                </span>
                                                                                                            </div>
                                                                                                            <div
                                                                                                                class="col-sm-5 col-md-6">
                                                                                                                <span
                                                                                                                    class="product-price">
                                                                                                                    <%=
                                                                                                                        puchase_product[i][j].total.toLocaleString()%>
                                                                                                                        ₫
                                                                                                                </span>
                                                                                                            </div>
                                                                                                        </div>
                                                                                                    </div>

                                                                                                    <div
                                                                                                        class="col-sm-6">
                                                                                                        <form
                                                                                                            action="/repurchase"
                                                                                                            method="post">
                                                                                                            <input
                                                                                                                type="hidden"
                                                                                                                name="repurchase"
                                                                                                                value="<%= puchase_product[i][j].cartId %>">
                                                                                                            <button
                                                                                                                style="width: 100px; margin-left: 3px; text-align: center; height: 30px; position: relative; background-color: #50b5ff; color: #ddd;"
                                                                                                                class="btn "
                                                                                                                data-target="#deleteModal"
                                                                                                                data-toggle="modal">Mua
                                                                                                                lại
                                                                                                            </button>
                                                                                                        </form>
                                                                                                    </div>
                                                                                                </div>
                                                                                            </div>

                                                                                        </div>

                                                                                    </li>

                                                                                </ul>

                                                                            </div>

                                                                            <% } %>
                                                                                <div
                                                                                    style="float: right; margin-right: 20px;">
                                                                                    <span style="color: red;">
                                                                                        Tổng tiền :
                                                                                        <%=puchase_product[i][0].totalOrder.toLocaleString()%>
                                                                                            ₫

                                                                                    </span>
                                                                                </div>
                                                                                <hr style="margin-top: 40px;">
                                                                                <% } %>
                                                                                    <% } else{ %>
                                                                                        <h5 style="text-align: center;">
                                                                                            Chưa có đơn hàng</h5>
                                                                                        <% } %>

                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <footer class="iq-footer">
                <%- include ("footer.ejs") %>
            </footer>
            <%- include ("boostrapJs.ejs") %>

</body>

</html>